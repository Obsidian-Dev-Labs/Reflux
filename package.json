{
  "name": "@nightnetwork/reflux",
  "type": "module",
  "version": "1.0.1",
  "description": "Reflux is a powerful, universal request/response middleware engine designed for any BareMux compatible web proxy. It enables seamless script injection, request/response rewriting, and full control over the transports â€” all from a single, extensible interface.",
  "main": "./dist/index.mjs",
  "types": "./lib/index.d.ts",
  "scripts": {
    "build": "node esbuild.bundle.mjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Night-Libs/Reflux.git"
  },
  "author": "Night Network",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Night-Libs/Reflux/issues"
  },
  "homepage": "https://github.com/Night-Libs/Reflux#readme",
  "devDependencies": {
    "@mercuryworkshop/bare-mux": "^2.1.7",
    "esbuild": "^0.24.0",
    "esbuild-plugin-d.ts": "^1.3.1",
    "esbuild-plugin-umd-wrapper": "^3.0.0",
    "tsc": "^2.0.4",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "browser": {
        "import": "./dist/index.mjs",
        "require": "./dist/index.js"
      },
      "node": {
        "require": "./lib/index.cjs",
        "import": "./lib/index.cjs"
      }
    },
    "./transport": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./lib/index.d.ts"
    },
    "./path": {
      "require": "./lib/index.cjs",
      "import": "./lib/index.cjs",
      "types": "./lib/index.cjs.d.ts"
    }
  },
  "dependencies": {
    "localforage": "^1.10.0"
  }
}
